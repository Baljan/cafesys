#!/bin/sh
# Fail on non-zero exit status
set -e

# Docker Cloud is messing things up by using DNS instead of hosts entries, and
# it does not seem to work.
# fixme: migrate to ADFS so we won't need this madness
getent hosts ldap-tunnel | echo `awk '{ print $1 ; exit }'` baljan.lukas.unit.liu.se >> /etc/hosts

exec "$@"
